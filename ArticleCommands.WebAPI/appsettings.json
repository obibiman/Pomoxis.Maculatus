{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "ConnectionStrings": {
        "ArticleData": "Server=(localDb)\\MsSqlLocalDb;Database=eCommerseDb;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "System": "Information",
                "Microsoft": "Information",
                "Microsoft.EntityFrameworkCore": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:5341",
                    "apiKey": "none",
                    "restrictedToMinimumLevel": "Verbose"
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "restrictedToMinimumLevel": "Information"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "C:\\Devsource\\LowerOldRiver\\WestLab\\Pomoxis.Maculatus\\ArticleCommands.WebAPI\\Logs\\log.txt",
                    "outputTemplate": "{Timestamp:G}{Message}{Newline:1}{Exception:1}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "paths": "C:\\Devsource\\LowerOldRiver\\WestLab\\Pomoxis.Maculatus\\ArticleCommands.WebAPI\\Logs\\log.json",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
        "Properties": {
            "Environment": "LocalDev"
        }
    }
}